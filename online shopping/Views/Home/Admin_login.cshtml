

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <h2>Login to Admin account</h2>
                    <form action="#">
                        <input type="text" placeholder="Name" />
                        <input type="email" placeholder="Email Address" />
                        <span>
                            <input type="checkbox" class="checkbox">
                            Keep me signed in
                        </span>
                        <button type="submit" class="btn btn-default">Login</button>
                    </form>
                </div><!--/login form-->
            </div>
            <div class="col-sm-1">
                <h2 class="or">OR</h2>
            </div>
            <div class="col-sm-4">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>New Admin Signup!</h2>
                    <form action="/Home/addAdminConfirm" method="post">

                        @Html.Label("Name")
                        @Html.TextBox("AD_Name", "", new { placeholder = "Name" })
                        @*  @Html.ValidationMessage("name")*@



                        @Html.Label("Email Address")
                        @Html.TextBox("AD_email", "", new { placeholder = "Email Address" })
                        @* @Html.ValidationMessage("C_email")*@

                        @Html.Label("Password")
                        @Html.TextBox("AD_Password", "", new { placeholder = "Password" })
                        @*   @Html.ValidationMessage("C_password")*@




                        @*<input type="text" placeholder="Name" />
                            <input type="email" placeholder="Email Address" />
                            <input type="password" placeholder="Password" />*@
                        <button type="submit" class="btn btn-default">Signup</button>
                    </form>

                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->
